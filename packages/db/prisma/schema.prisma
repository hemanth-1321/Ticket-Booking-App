generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String    @id @default(uuid())
  number   String    @unique
  name     String    @default("")
  verified Boolean   @default(false)
  booking  Booking[]
  Payment  Payment[]
}

model Admin {
  id       String  @id @default(uuid())
  number   String  @unique
  name     String
  verified Boolean @default(false)

  events Event[]
  type   AdminType
}

model Event {
  id          String    @id @default(uuid())
  name        String
  description String
  banner      String
  startTime   DateTime
  adminId     String
  admin       Admin     @relation(fields: [adminId], references: [id])
  bokings     Booking[]
  Payment     Payment[]
  LocationId  String
  location    Location  @relation(fields: [LocationId], references: [id])
}

model Booking {
  id String @id @default(uuid())

  eventId String
  userId  String

  event Event  @relation(fields: [eventId], references: [id])
  user  User   @relation(fields: [userId], references: [id])
  seats Seat[]
}

model Seat {
  id         String @id @default(uuid())
  seatTypeId String
  bookingId  String

  qr       String
  booking  Booking  @relation(fields: [bookingId], references: [id])
  seatType SeatType @relation(fields: [seatTypeId], references: [id])
}

model SeatType {
  id          String @id @default(uuid())
  name        String
  description String
  eventId     String
  price       Int
  seats       Seat[]
}

model Location {
  id          String @id @default(uuid())
  name        String
  description String
  imageUrl    String

  Event Event[]
}

model Payment {
  id String @id @default(uuid())

  eventId String
  userId  String
  status  PaymentState
  user    User         @relation(fields: [userId], references: [id])
  event   Event        @relation(fields: [eventId], references: [id])
}

enum PaymentState {
  Success
  Fail
  Pending
}

enum AdminType {
  SuperAdmin
  Creator
}
